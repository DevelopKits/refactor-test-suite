# http://editorconfig.org

root = true

[{CMakeLists.txt,*.{h,cpp}}]
indent_style = space
indent_size = 4
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[.editorconfig]
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[.travis.yml]
indent_style = space
indent_size = 2
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
